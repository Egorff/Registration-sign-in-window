<Page x:Class="RegistrationAndLogining.View.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegistrationAndLogining.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="White">

        <Grid Grid.Row="2" Margin="0, 10, 0, 0" LostFocus="Grid_LostFocus"
              Visibility="{Binding LoginVisibility, 
            UpdateSourceTrigger=PropertyChanged}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="81.3043478260869"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="31*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="127*"/>
                <RowDefinition Height="52.14"/>
                <RowDefinition Height="48*"/>
            </Grid.RowDefinitions>

            <!--#region Labels-->



            <Label x:Name="LabelPass1" Grid.Row="3" Grid.Column="3" HorizontalContentAlignment="Right"
                   VerticalContentAlignment="Bottom" FontFamily="Arial Narrow" 
                   FontWeight="Bold" Foreground="OrangeRed" Margin="150,20,0,0"/>

            <Label Content="Login" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center" FontFamily="Arial Narrow" 
                   FontSize="{StaticResource InputFieldHeader}" 
                   FontWeight="Bold" />

            <Label Content="Password" Grid.Column="1" Grid.Row="3" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center" FontFamily="Arial Narrow" 
                   FontSize="{StaticResource InputFieldHeader}" 
                   FontWeight="Bold" />


            <!--#endregion-->

            <!--#region TextBoxes-->


            <TextBox Grid.Column="3" Grid.Row="1" 
                     FontSize="{StaticResource InputFieldHeader}"
                     Background="#FFE9E9E9" 
                     Style="{StaticResource InputField}">

                <TextBox.Text>

                    <Binding Path="Login"
                             UpdateSourceTrigger="PropertyChanged"
                             Mode="TwoWay">

                        <Binding.ValidationRules>

                            <DataErrorValidationRule/>

                        </Binding.ValidationRules>

                    </Binding>

                </TextBox.Text>

            </TextBox>

            <PasswordBox x:Name="P1" Grid.Column="3" Grid.Row="3" 
                     FontSize="{StaticResource InputFieldHeader}" 
                         Background="#FFE9E9E9"/>

            <!--#endregion-->

            <Button Grid.Column="3" Grid.Row="5" Content="Sign in"
                    FontSize="{StaticResource InputFieldHeader}"
                    Width="150" Command="{Binding OnSignInButtonPressed}"/>

            <Button Grid.Column="1" Grid.Row="5"
                    FontSize="{StaticResource InputFieldHeader}"
                    Content="Forgot pass" 
                    Command="{Binding OnForgotPassButtonPressed}"/>


        </Grid>

        <Grid Visibility="{Binding ForgotPassGridVisibility, 
            UpdateSourceTrigger=PropertyChanged}">

            <Grid.RowDefinitions>

                <RowDefinition Height="15*"/>

                <RowDefinition Height="50"/>

                <RowDefinition Height="15*"/>

                <RowDefinition Height="66"/>

                <RowDefinition Height="19*"/>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>

                <ColumnDefinition/>

                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <TextBlock Grid.ColumnSpan="3"
                       Text="Please enter your email for verification."
                       FontSize="40" HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <TextBox Grid.Row="1" Grid.ColumnSpan="3"
                     Style="{StaticResource InputField}" Margin="150,0"
                      Background="#FFE9E9E9" 
                     FontSize="{StaticResource InputFieldHeader}">

                <TextBox.Text>

                    <Binding Path="Email" UpdateSourceTrigger="LostFocus"
                             Mode="TwoWay">

                        <Binding.ValidationRules>

                            <DataErrorValidationRule>



                            </DataErrorValidationRule>

                        </Binding.ValidationRules>

                    </Binding>

                </TextBox.Text>

            </TextBox>

            <Button  Grid.Column="1" Grid.Row="3" Content="Check email"
                     Style="{StaticResource Button}"
                     Command="{Binding OnCheckEmailButtonPressed}"/>

            <Button Grid.Row="3" Content="Back to login" 
                    Style="{StaticResource Button}"
                    Command="{Binding OnBackToLoginButtonPressed}"/>

        </Grid>

        <Grid Background="White" Visibility="{Binding 
            InputCodeVisibility, UpdateSourceTrigger=PropertyChanged}">

            <Grid.RowDefinitions>

                <RowDefinition Height="50"/>

                <RowDefinition/>

                <RowDefinition Height="45"/>

                <RowDefinition />

                <RowDefinition/>

                <RowDefinition Height="100"/>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>

                <ColumnDefinition/>

                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <TextBox x:Name="CodeTextBox" Grid.Row="2" Grid.Column="1" Background="LightGray"
                     HorizontalContentAlignment="Center" FontSize="27"
                     Style="{StaticResource InputField}">

                <TextBox.Text>

                    <Binding Path="Code" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">

                        <Binding.ValidationRules>

                            <DataErrorValidationRule/>

                        </Binding.ValidationRules>

                    </Binding>

                </TextBox.Text>

            </TextBox>

            <TextBlock Grid.Column="1" Text="Please, input below code which you have got on email"
                   Style="{StaticResource TextBlock}"
                   TextWrapping="Wrap"/>

            <TextBlock x:Name="TextBlockYourEmail" Grid.Row="3"
                       Text="{Binding Email}"/>

            <Button x:Name="CheckCodeButton" Grid.Row="4" Grid.Column="1"  Content="Check code" 
                FontSize="20" Margin="60,0" Command="{Binding OnCheckCodeButtonPressed}"/>

            <Button Grid.Row="4" Content="I has inputted wrong email"
                FontSize="20" Width="245" Command="{Binding OnInputedWronEmailButtonPressed}"/>

        </Grid>

    </Grid>
</Page>
